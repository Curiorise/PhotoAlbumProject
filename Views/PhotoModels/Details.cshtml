@model MvcPhotoAlbumProject.Models.PhotoModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PhotoModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Geolocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Geolocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapturedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapturedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapturedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapturedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="@FileLocation.RetriveFileFromFolder@Model.Photo" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Delete</a>
    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
</div>
